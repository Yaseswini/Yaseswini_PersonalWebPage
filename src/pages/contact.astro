---
import Layout from '../layouts/Layout.astro'
import { social } from '@/settings';  // Import the social object from settings

// Calculate icon sizes based on the number of social links
const calculatedIconSize = 'w-6 h-6';  // You can adjust this value based on your design
const calculatedContainerSize = 'size-12'; // Adjust the container size as per your needs
---

<Layout>
  <!-- Contact Information Section -->
  <section class="py-12">
    <!-- Centered Justified Text -->
    <p class="text-center mb-8 text-2xl px-6">
      If you have a project in mind, a question, or simply want to connect, don’t hesitate to reach out — I’d love to hear from you!
    </p>

    <!--<h2 class="text-3xl font-bold text-center mb-8">Contact Information</h2>-->
    
    <!-- Social Icons Section -->
    <div class="flex justify-center gap-8">
      
      <!-- Email Section -->
      {social.email && (
        <div class="contact-item">
          <a href={`mailto:${social.email}`} class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl hover:bg-primary/20 transition-all duration-300`}>
            <!-- Email Icon (Font Awesome) -->
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class={calculatedIconSize} fill="currentColor">
              <path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48L48 64zM0 176L0 384c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-208L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"/>
            </svg>
          </a>
        </div>
      )}

      <!-- LinkedIn Section -->
      {social.linkedin && (
        <div class="contact-item">
          <a href={social.linkedin} target="_blank" class={`${calculatedContainerSize} inline-flex items-center justify-center rounded-xl hover:bg-primary/20 transition-all duration-300`}>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class={calculatedIconSize} fill="currentColor"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M100.3 448H7.4V148.9h92.9zM53.8 108.1C24.1 108.1 0 83.5 0 53.8a53.8 53.8 0 0 1 107.6 0c0 29.7-24.1 54.3-53.8 54.3zM447.9 448h-92.7V302.4c0-34.7-.7-79.2-48.3-79.2-48.3 0-55.7 37.7-55.7 76.7V448h-92.8V148.9h89.1v40.8h1.3c12.4-23.5 42.7-48.3 87.9-48.3 94 0 111.3 61.9 111.3 142.3V448z"/></svg>
          </a>
        </div>
      )}
      
    </div>

    <!-- Download CV Section -->
    <div class="mt-12 text-center">
      <p><i>If you'd like to download my CV, click the button below:<i></p>
      <a href="/Neelamraju_Yaseswini_CurriculumVitae.pdf" download="NeelamrajuY_CV.pdf" class="inline-block px-6 py-3 mt-4 bg-pink-600 text-white rounded-lg hover:bg-blue-700 transition-all duration-300">
        Download CV
      </a>
    </div>
  </section>


